@model RecruitmentTask.ViewModels.RaportViewModelRequest

@using (Ajax.BeginForm("GetFilteredRecords", "Home", null,
        new AjaxOptions
        {
            HttpMethod = "GET",
            InsertionMode = InsertionMode.Replace,
            UpdateTargetId = "raports-content"
        }, new { id = "filter-form" }))

{
    @Html.LabelFor(x => x.Premises)
    @Html.TextBoxFor(x => x.Premises, new { @class = "form-control" })

    @Html.LabelFor(x => x.From)
    @Html.TextBoxFor(x => x.From, new { @class = "date-picker form-control" })

    @Html.LabelFor(x => x.To)
    @Html.TextBoxFor(x => x.To, new { @class = "date-picker form-control" })

    <input class="btn btn-success" type="submit" id="search-button" value="Zatwierdź" />
}
<script type="text/javascript">
    $(function () {
        $('.date-picker').datepicker();
    })
</script>